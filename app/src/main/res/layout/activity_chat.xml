<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip">
        <ImageButton android:id="@+id/chat_back"
            android:background="@drawable/ic_navigate_before_white_24dp"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_centerVertical="true" />
        <TextView android:textSize="24.0sp"
            android:textColor="@color/white"
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CXT"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/msg_recyclerView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20.0dip"
            android:layout_above="@+id/chat_bottom" />
        <View android:background="@drawable/toolbar_dropshadow"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_above="@+id/chat_bottom" />
        <RelativeLayout android:id="@+id/chat_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <ImageButton
                android:id="@+id/chat_voice"
                android:background="@drawable/ic_keyboard_voice_black_24dp"
                android:layout_width="24.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/chat_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toStartOf="@+id/chat_send"
                android:layout_toEndOf="@+id/chat_voice" />
            <ImageButton android:id="@+id/chat_send"
                android:background="@drawable/ic_send_black_24dp"
                android:layout_width="34.0dip"
                android:layout_height="24.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginStart="8.0dip"
                android:layout_marginEnd="8.0dip" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>