<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzes.huddle.add.AddTeamActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/add_team_back_btn"
            android:background="@drawable/ic_navigate_before_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_team"
            android:layout_centerInParent="true" />
        <ImageButton
            android:id="@+id/add_team_send_btn"
            android:background="@drawable/ic_publish_white_24dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <EditText
        android:id="@+id/add_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_team_title"
        android:background="@color/my_gray"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <EditText
        android:id="@+id/add_team_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_team_content"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@color/my_gray"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/add_team_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_place_black_24dp"/>

</LinearLayout>
