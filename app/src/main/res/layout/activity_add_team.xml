<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzes.huddle.add.AddTeamActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/chat_back_btn"
            android:background="@drawable/ic_navigate_before_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加组队"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <EditText android:id="@+id/add_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题 描述一下核心"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="描述一下主要内容"
        android:minLines="5"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

</LinearLayout>
