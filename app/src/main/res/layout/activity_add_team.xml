<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wzes.huddle.add.AddTeamActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/add_team_back_btn"
            android:background="@drawable/ic_navigate_before_white_24dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_team"
            android:layout_centerInParent="true" />
        <!--<ImageButton-->
            <!--android:id="@+id/add_team_send_btn"-->
            <!--android:background="@drawable/ic_send_white_24dp"-->
            <!--android:layout_width="36dp"-->
            <!--android:layout_height="36dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_centerVertical="true" />-->
    </RelativeLayout>

    <EditText
        android:id="@+id/add_team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_team_title"
        android:padding="8dp"
        android:textSize="20sp"
        android:background="@color/my_gray"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <EditText
        android:id="@+id/add_team_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_team_content"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@color/my_gray"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
    <TextView
        android:id="@+id/add_team_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自由"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_accessibility_black_24dp"/>
    <TextView
        android:id="@+id/add_team_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学术竞赛"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_filter_list_black_24dp"/>
    <TextView
        android:id="@+id/add_team_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017年9月20号"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_access_time_black_24dp"/>
    <TextView
        android:id="@+id/add_team_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择活动地点"
        android:textSize="18sp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_place_black_24dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team_add_recyclerView"
        android:layout_margin="@dimen/activity_horizontal_margin">
    </android.support.v7.widget.RecyclerView>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/add_team_send_btn"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:background="@drawable/button_shape_default_rounded"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:spinning_bar_color="@color/black"
        app:spinning_bar_width="4dp"
        app:initialCornerAngle="50dp"
        app:finalCornerAngle="50dp"
        android:text="@string/publish"
        android:textSize="18sp"
        android:transitionName="transition"
        android:textColor="@android:color/black"/>

