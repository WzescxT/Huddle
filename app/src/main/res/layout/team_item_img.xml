<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/select" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textStyle="bold"
                android:textColor="#ff000000"
                android:id="@+id/team_item_img_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="70.0dip"
                android:text="微软2017编程之美挑战赛" />
            <TextView
                android:textColor="#ffffffff"
                android:id="@+id/team_item_img_status"
                android:background="@drawable/message_time_background"
                android:padding="2.0dip" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.0dip"
                android:text="正在招募"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <ImageView
                android:id="@+id/team_item_img1"
                android:layout_width="0.0dip"
                android:layout_height="110.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/team"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_weight="1.0" />
            <ImageView
                android:id="@+id/team_item_img2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:src="@drawable/team"
                android:scaleType="centerCrop"
                android:layout_weight="1.0" />
            <ImageView
                android:id="@+id/team_item_img3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="2.0dip"
                android:src="@drawable/team_2"
                android:scaleType="centerCrop"
                android:layout_weight="1.0" />
        </LinearLayout>

        <TextView
            android:textSize="15.0dip"
            android:id="@+id/team_item_img_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="快来加入我们吧" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:layout_marginTop="5.0dip">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/team_item_img_image"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/logo"
                android:layout_centerVertical="true" />
            <TextView android:textSize="16.0dip"
                android:id="@+id/team_item_img_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:text="为战而生"
                android:layout_toRightOf="@+id/team_item_img_image"
                android:layout_centerVertical="true" />
            <Button
                android:textSize="16.0sp"
                android:textColor="#ffd1d1d1"
                android:id="@+id/team_item_img_location"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="20.0dip"
                android:text="同济大学体育馆"
                android:drawableRight="@drawable/ic_place_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/team_img_divider"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="4.0dip" />
</LinearLayout>