<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageButton
            android:id="@+id/my_info_back"
            android:background="@drawable/ic_arrow_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical" />
        <TextView
            android:textSize="@dimen/title_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
        <View         
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="10dp" />
        <RelativeLayout 
            android:id="@+id/my_info_re_img" 
            android:background="@drawable/select_background"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="头像" 
                android:layout_centerVertical="true" />
            <ImageView android:id="@+id/my_info_img" 
                android:layout_width="50dp" 
                android:layout_height="50dp" 
                android:layout_marginEnd="8dp" 
                android:src="@drawable/photo" 
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="10dp" />
        <RelativeLayout android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="学号" 
                android:layout_centerVertical="true" />
            <TextView android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_username" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:id="@+id/textView" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="姓名" 
                android:layout_centerVertical="true" />
            <TextView android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_name" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignTop="@+id/textView" 
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="姓别" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_sex" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="年级" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_grade" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="专业" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_major" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="生日" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_birth" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="电话" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_phone" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp" 
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="签名" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_motto" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="10dp" />
        <RelativeLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_margin="8dp">
            <TextView 
                android:textSize="18dp"
                android:textColor="#ff000000" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:text="简介" 
                android:layout_centerVertical="true" />
            <TextView 
                android:textSize="17dp" 
                android:gravity="center_vertical" 
                android:id="@+id/my_info_more"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="" 
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View 
            android:background="@color/divider" 
            android:layout_width="match_parent" 
            android:layout_height="10dp" />
    </LinearLayout>
</LinearLayout>