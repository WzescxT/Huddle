<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20.0dip">
    <TextView
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/message_time"
        android:background="@drawable/message_time_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:paddingStart="4.0dip"
        android:paddingEnd="4.0dip" />
    <RelativeLayout
        android:layout_gravity="end"
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <TextView
            android:textSize="18.0sp"
            android:id="@+id/right_txt"
            android:background="@drawable/rightbackground"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/right_img" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/right_img"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="10.0dip"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="start"
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/left_img"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_margin="10.0dip"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="18.0sp"
            android:id="@+id/left_txt"
            android:background="@drawable/leftbackground"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_marginEnd="40.0dip"
            android:layout_toEndOf="@+id/left_img" />
    </RelativeLayout>
</LinearLayout>